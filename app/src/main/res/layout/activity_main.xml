<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.demouser.bus.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 1 Score:"
            android:layout_weight="1"
            android:id="@+id/player1ScoreText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/player1Score"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 2 Score:"
            android:layout_weight="1"
            android:id="@+id/player2ScoreText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/player2Score"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:layout_centerInParent="true"

        android:rowCount="4">

        <ImageButton
            android:layout_column="0"
            android:layout_row="0"
            android:id="@+id/space1"

            />
        <ImageButton
            android:layout_column="0"
            android:layout_row="1"
            android:id="@+id/space2"



            />
        <ImageButton
            android:layout_column="0"
            android:layout_row="2"
            android:id="@+id/space3"




            />
        <ImageButton
            android:layout_column="0"
            android:layout_row="3"
            android:id="@+id/space4"

            />
        <ImageButton
            android:layout_column="1"
            android:layout_row="0"
            android:id="@+id/space5"



            />
        <ImageButton
            android:layout_column="1"
            android:layout_row="1"
            android:id="@+id/space6"




            />
        <ImageButton
            android:layout_column="1"
            android:layout_row="2"
            android:id="@+id/space7"

            />
        <ImageButton
            android:layout_column="1"
            android:layout_row="3"
            android:id="@+id/space8"

            />
        <ImageButton
            android:layout_column="2"
            android:layout_row="0"
            android:id="@+id/space9"


            />
        <ImageButton
            android:layout_column="2"
            android:layout_row="1"
            android:id="@+id/space10"




            />
        <ImageButton
            android:layout_column="2"
            android:layout_row="2"
            android:id="@+id/space11"




            />
        <ImageButton
            android:layout_column="2"
            android:layout_row="3"
            android:id="@+id/space12"

            />
        <ImageButton
            android:layout_column="3"
            android:layout_row="0"
            android:id="@+id/space13"

            />
        <ImageButton
            android:layout_column="3"
            android:layout_row="1"
            android:id="@+id/space14"

            />
        <ImageButton
            android:layout_column="3"
            android:layout_row="2"
            android:id="@+id/space15"

            />
        <ImageButton
            android:layout_column="3"
            android:layout_row="3"
            android:id="@+id/space16"
            />



    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:id="@+id/newGameButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_text"
        android:layout_below="@+id/linearLayout2"
        android:textSize="20dp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
